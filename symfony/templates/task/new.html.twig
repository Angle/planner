{# this view opens inside a modal #}

<div class="top-buttons">
    <a href="#" onclick="closeModal();">&times; close</a>
</div>
<div class="title">
    <h1>New Task</h1>
</div>


<div class="form">
    <div class="form-header">
        <div class="form-notebook">
            <label for="notebook">Notebook: </label>
            <select id="notebook">
                <option>Angle</option>
                <option>Dummy</option>
            </select>
        </div>
        <div class="form-week">
            Week:
            <input type="number" min="1000" max="3000" step="1" class="input-small" placeholder="YYYY">
            <input type="number" min="0" max="53" step="1" class="input-small" placeholder="WW">
        </div>
    </div>
    <input type="text" class="input-big" name="" placeholder="Write task concept..">

    <div class="action-buttons">
        <button type="submit" class="btn-outline">&check; save</button>
    </div>
</div>

<div class="action-buttons">
    <a href="#" class="btn-outline">&check; save</a>
</div>


<div class="details">
    {{ form(form) }}
</div>