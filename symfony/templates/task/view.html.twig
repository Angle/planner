{# this view opens inside a modal #}

<div class="top-buttons">
    <a href="#" onclick="closeModal();">&times; close</a>
</div>
<div class="title">
    <h3>{{ task.notebook.name }}</h3>
    <h2>{{ task.concept }}</h2>
</div>
<div class="details">
    {% if task.details %}
        {{ task.details|markdown }}
    {% else %}
        <p><em>Add details.. (pending)</em></p>
    {% endif %}
</div>

