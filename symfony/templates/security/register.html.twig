{% extends 'layout.html.twig' %}

{% block body %}

    <div class="wrapper">
        <div class="notebook">
            <div class="content no-sidebar">

                <div class="header login">
                    <div class="title">
                        <h1>Angle Planner</h1>
                        <h3>Sign up</h3>
                    </div>
                </div>

                <div class="login-box">
                    {{ form_start(form) }}
                        {{ form_widget(form.firstName) }}
                        {{ form_widget(form.lastName) }}
                        {{ form_widget(form.email) }}
                        {{ form_widget(form.password) }}
                        {{ form_widget(form.checkPassword) }}

                        <button type="submit" class="login-control">Register</button>
                    {{ form_end(form) }}

                    <div class="links">
                        <a href="{{ path('app_login') }}" class="btn-text dashed">I already have an account</a>
                    </div>
                </div>

            </div>
        </div>


        <footer>
            <p class="copy">Built with <small>&hearts;</small> by <a href="https://www.angle.mx" target="_blank">Angle</a>.</p>
            <p class="links">
                <a href="#">Terms of Use</a> |
                <a href="#">Privacy Policy</a>
            </p>
        </footer>

    </div>
{% endblock %}